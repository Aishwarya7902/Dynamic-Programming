***************************************************************************Time Complexity: O(S*N), where S = sum of array elements + K/2 
                                                                    Auxiliary Space: O(S*N)**************************************************************
 BEST EXPLANATION OF THIS QUESTION: https://youtu.be/ot_XBHyqpFc                                                                  

#include<bits/stdc++.h>
#include <iostream>
using namespace std;
int countsubs(vector<int>&arr,int n,int sum){
     int  t[n+1][sum+1];
    for(int i=0;i<n+1;i++){
        for(int j=0;j<sum+1;j++){
            if(i==0){
                t[i][j]=0;
            }
            if(j==0)t[i][j]=1;
            
        }
    }
for(int  i=1;i<=n;i++){
    for(int j=1;j<=sum;j++){
        if(arr[i-1]<=sum){
            t[i][j]=t[i-1][j]+t[i-1][j-arr[i-1]];
        }
        else{
            t[i][j]=t[i-1][j];
        }
    }
}
return t[n][sum];
}
int CountOfSubsetWithGivenDifference(vector<int>&arr,int n,int diff){
    int sum=0;
    for(int i=0;i<n;i++){
        sum+=arr[i];
    }
    int s1=(diff+sum)/2;
    return countsubs(arr,n,s1);
}

int main() {
     
    int diff = 1, n = 4;
    vector<int>arr = { 1, 6, 11, 5 };
 
    // Function Call
    cout << CountOfSubsetWithGivenDifference(arr, n, diff);
    
    
	return 0;
}
